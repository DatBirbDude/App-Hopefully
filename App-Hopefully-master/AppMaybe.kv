
<LogInScreen>:

    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 49/255, 47/255, 47/255, 1
            Rectangle:
                size: self.size

            Color:
                rgba: 34/255, 24/255, 28/255, 0.8

            RoundedRectangle:
                pos: self.width/2 - root.screen_width*7/16, self.height*2/3 - root.screen_height/4
                size: self.width*7/8, self.height*1/3
                radius: [(self.height/20, self.height/20), (self.height/20, self.height/20), (self.height/20, self.height/20), (self.height/20, self.height/20)]
        Label:
            id: app_name
            size_hint: 1, None
            height: root.height/4 - root.height / 12
            text: 'Star Light'
            font_name: 'Fonts/TransformersMovie.ttf'
            font_size: self.width/6
            color: 132/255, 220/255, 207/255, 1

        BoxLayout:
            id: LogInLayout
            orientation: 'vertical'
            size_hint: 3/4, 1
            pos_hint: {"center_x": 0.5, "top": 0}
            Label:
                id: LoginLabel
                text: 'Login'
                font_size: self.height / 2
                font_name: 'Fonts/BodoniXT.ttf'
                color: 246/255, 232/255, 234/255, 1
                size_hint: 1, None
                height: root.height / 12
                halign: 'center'
                valign: 'top'
                padding_y: self.height / 4
            Label:
                id: username
                text: 'username:'
                height: root.height / 20
                text_size: self.size
                font_size: root.height / 45
                color: 246/255, 232/255, 234/255, 1
                padding_x: self.width / 20
                padding_y: self.width / 100
                size_hint: 1, None

            TextInput:
                id: UsernameInput
                multiline: False
                background_color: [34/255, 24/255, 28/255, 0.8]
                size_hint: 1, None
                height: root.height / 25
                cursor_color: 246/255, 232/255, 234/255, 1
                text_size: self.size
                font_size: self.height * 0.9 / 2
                foreground_color: 246/255, 232/255, 234/255

            Label:
                id: password
                text: 'password:'
                height: root.height / 12
                text_size: self.size
                font_size: root.height / 45
                color: 246/255, 232/255, 234/255, 1
                halign: 'left'
                padding_x: self.width / 20
                padding_y: self.width / 100
                size_hint: 1, None

            TextInput:
                id: PasswordInput
                multiline: False
                background_color: [34/255, 24/255, 28/255, 0.8]
                size_hint: 1, None
                text_size: self.size
                font_size: self.height * 0.9 / 2
                foreground_color: 246/255, 232/255, 234/255
                height: root.height / 25
                cursor_color: 246/255, 232/255, 234/255, 1

            Label:
                size_hint: 1, 0
                height: root.height / 25

            MDRectangleFlatButton:
                text: "Log in"
                theme_text_color: "Custom"
                text_color: "white"
                line_color: 239/255, 98/255, 108/255, 1
                size_hint: 0.6, None
                height: root.height / 20
                pos_hint: {"center_x" : 0.5, "center_y" : 0.5}
                on_press:
                    root.manager.transition.direction = 'left'
                    root.check_login()
        Label:
            text: 'INSERT COOL DESIGN HERE'
            size_hint: 1, None
            height: root.height * 9/20

<MainScreen>:
    BoxLayout:

        orientation: 'vertical'

        BoxLayout:

            orientation: 'horizontal'
            size_hint: 1, None
            height: root.height / 12

            canvas:

                Color:
                    rgba: 49/255, 47/255, 47/255, 1

                Rectangle:
                    size: root.size

                Color:
                    rgba: 34/255, 24/255, 28/255, 1

                RoundedRectangle:
                    size: self.size
                    pos: 0, root.height * 11/12
                    radius: [0, 0, (self.height/5, self.height/5), (self.height/5, self.height/5)]

                Line:
                    rectangle: (root.buffer, (root.width - root.buffer * 1.75) / 2 + root.buffer * 2, root.width - root.buffer * 2, root.height * 66/100)

            MDIconButton:
                icon: 'SettingsIcon.png'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.settings_button_press()

            Label:
                text: 'Star Light'
                font_name: 'Fonts/TransformersMovie.ttf'
                font_size: self.height / 1.8
                color: 132/255, 220/255, 207/255, 1

            MDIconButton:
                icon: 'MailIcon.png'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.contact_button_press()

        BoxLayout:

            orientation: 'vertical'
            pos_hint: {'center_x' : 0.5, 'center_y' : 0.5}
            spacing: root.buffer
            padding: root.buffer, root.buffer

            BoxLayout:

                id: CalendarLayout
                orientation: 'vertical'
                pos_hint: {'center_x' : 0.5, 'center_y' : 0.5}
                spacing: root.buffer
                padding: root.buffer, root.buffer

                MDFlatButton:
                    text: "Full Calendar"
                    theme_text_color: "Custom"
                    text_color: [34 / 255, 24 / 255, 28 / 255, 1]
                    font_name: 'Fonts/BodoniXT.ttf'
                    md_bg_color: 239/255, 98/255, 108/255, 1
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.calendar_button_press()
                    size_hint: 1, None
                    height: root.height / 6

                Label:
                    text: 'Coming Soon!'
                    size_hint: 1, 6

            BoxLayout:

                size_hint: 1, None
                height: (root.width - root.buffer * 1.75) / 2
                spacing: root.buffer / 2
                padding: root.buffer / 2, root.buffer / 2

                MDFlatButton:
                    text: " Share \n Photos "
                    font_name: 'Fonts/BodoniXT.ttf'
                    theme_text_color: "Custom"
                    text_color: [34 / 255, 24 / 255, 28 / 255, 1]
                    md_bg_color: 239/255, 98/255, 108/255, 1
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.photos_button_press()
                    size_hint: 1, 1

                MDFlatButton:
                    text: "Clubs"
                    font_name: 'Fonts/BodoniXT.ttf'
                    theme_text_color: "Custom"
                    text_color: [34 / 255, 24 / 255, 28 / 255, 1]
                    md_bg_color: 239/255, 98/255, 108/255, 1
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.clubs_button_press()
                    size_hint: 1, 1

