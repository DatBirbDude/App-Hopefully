<ContactScreen>:
    BoxLayout:

        orientation: 'vertical'

        BoxLayout:

            orientation: 'horizontal'
            size_hint: 1, None
            height: root.height / 12

            canvas:

                Color:
                    rgba: 255/255, 185/255, 245/255, 0.8

                RoundedRectangle:
                    size: root.width*7/8, root.height * 6/12
                    pos: root.width / 16, root.height * 4/12
                    radius: [root.height / 20,]

                Color:
                    rgba: 0.1, 0.1, 0.1, 1

                Line:
                    rectangle: [root.width / 10, root.height * 67/96 - root.height / 30 / 2, root.width * 8/10, root.height / 30]

                Line:
                    rectangle: [root.width * 5.5 / 10, root.height * 63/96 - root.height / 30 / 2, root.width * 1.75/10, root.height / 30]

                Line:
                    rectangle: [root.width * 2.5 / 10, root.height * 63/96 - root.height / 30 / 2, root.width * 2.5/10, root.height / 30]

                Line:
                    rectangle: [root.width * 1 / 10, root.height * 63/96 - root.height / 30 / 2, root.width * 1/10, root.height / 30]

                Color:
                    rgba: root.border_color

                Line:
                    rectangle: [root.width * 2/15, root.height * 59/96 - root.height / 36 / 2, root.width * 3/10, root.height / 36]

                Line:
                    rectangle: [root.width * 17/30, root.height * 59/96 - root.height / 36 / 2, root.width * 3/10, root.height / 36]

        Label:  # Separator
            size_hint: [1, None]
            height: root.height / 12

        Label:

            size_hint: [1, None]
            height: root.height / 12
            text: 'Contact Administration'
            font_size: self.height / 3
            font_name: 'Fonts/Vogue.ttf'
            color: 0.1, 0.1, 0.1, 1

        Label:  # Seperator

            size_hint: [1, None]
            height: root.height / 24

        Button:

            text: root.reason_for_contact
            color: 0.1, 0.1, 0.1, 1
            font_size: root.height / 50
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.8, None
            height: root.height / 48
            background_color: 0, 0, 0, 0
            on_press: root.change_reason()

        Label:  # Seperator

            size_hint: [1, None]
            height: root.height / 48

        BoxLayout:

            spacing: root.width / 20
            size_hint: 0.8, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            height: root.height / 48

            Button:

                text: root.day_string
                color: 0.1, 0.1, 0.1, 1
                font_size: root.height / 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: None, None
                width: root.width / 10
                height: root.height / 48
                background_color: 0, 0, 0, 0
                on_press: root.change_day()

            Button:

                text: root.month_string
                color: 0.1, 0.1, 0.1, 1
                font_size: root.height / 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: None, None
                width: root.width / 4
                height: root.height / 48
                background_color: 0, 0, 0, 0
                on_press: root.change_month()

            Button:

                text: root.year_string
                color: 0.1, 0.1, 0.1, 1
                font_size: root.height / 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: None, None
                width: root.width * 0.175
                height: root.height / 48
                background_color: 0, 0, 0, 0

            MDIconButton:
                size_hint: 1, 2
                pos_hint: {'left': 1, 'center_y': 0.5}
                icon: 'ArrowBackIcon.png'
                on_press: root.change_year(-1)

            MDIconButton:
                size_hint: 1, 2
                pos_hint: {'left': 1, 'center_y': 0.5}
                icon: 'ArrowForwardIcon.png'
                on_press: root.change_year(1)


        Label:  # Seperator

            size_hint: [1, None]
            height: root.height / 48

        BoxLayout:

            spacing: root.width / 20
            size_hint: 0.6, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            height: root.height / 48

            Button:

                text: root.hour_string if root.need_time else ''
                color: 0.1, 0.1, 0.1, 1
                font_size: root.height / 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: 1, None
                height: root.height / 48
                background_color: 0, 0, 0, 0
                on_press: root.change_hour()

            Label:
                text: ':' if root.need_time else ''

            Button:

                text: root.minute_string if root.need_time else ''
                color: 0.1, 0.1, 0.1, 1
                font_size: root.height / 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: 1, None
                height: root.height / 48
                background_color: 0, 0, 0, 0
                on_press: root.change_minute()

        Label:  # Seperator

            size_hint: [1, None]
            height: root.height / 24

        Label:

            text: 'notes:'
            color: 0.1, 0.1, 0.1, 1
            size_hint: 0.6, None
            text_size: [root.width * 4/10, root.height / 45]
            halign: 'left'
            valign: 'bottom'
            height: root.height / 45
            font_size: root.height / 45
            padding_x: self.width / 20
            padding_y: self.width / 100


        TextInput:

            id: Notes
            background_color: [255/255, 185/255, 245/255, 0.8]
            multiline: False
            size_hint: 0.8, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            height: root.height / 12
            cursor_color: 0.1, 0.1, 0.1, 1
            text_size: self.size
            font_size: root.height / 48
            foreground_color: 0.1, 0.1, 0.1, 1

        Label:  # Seperator

            size_hint: [1, None]
            height: root.height / 24

        MDRectangleFlatButton:

            text: "Send"
            theme_text_color: "Custom"
            text_color: "black"
            line_color: 0.1, 0.1, 0.1, 1
            size_hint: 0.6, None
            height: root.height / 24
            pos_hint: {"center_x" : 0.5, "center_y" : 0.5}
            on_press: root.send_notice()

        Label:

    MDRectangleFlatButton:

        text: "Go To Admin\nScreen"
        pos: root.width * 6/10, root.height / 9
        size: root.width / 3, root.height / 15
        text_color: "black"
        line_color: 0.1, 0.1, 0.1, 1
        theme_icon_color: "Custom"
        icon_color: 'black'
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'admin_contact'

