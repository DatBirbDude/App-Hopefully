<BaseScreen>:

    Image:

        source: "Starlight/BaseScreen.png"
        size: root.size
        keep_ratio: False
        allow_stretch: True

    BoxLayout:

        orientation: 'vertical'

        Label:

            size_hint: 0.7, None
            height: root.height / 6
            text: 'Star Light'
            font_name: 'Fonts/Chekhard.ttf'
            font_size: self.width/6
            color: 0.1, 0.1, 0.1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.25}

        Label:

        BoxLayout:

            size_hint: 1, None
            height: root.height / 10
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDIconButton:

                icon: 'SettingsIcon.png'
                size_hint: 1, 1
                size: self.size
                allow_stretch: True
                on_press:
                    root.manager.transition.direction = 'left'
                    root.settings_button_press()

            MDIconButton:

                icon: 'Pencil_Icon.png'
                size_hint: 1, 1
                on_press:
                    root.manager.transition.direction = 'left'
                    root.clubs_button_press()

            MDIconButton:

                icon: 'Calendar_Icon.png'
                size_hint: 1, 1
                on_press:
                    root.manager.transition.direction = 'left'
                    root.calendar_button_press()

            MDIconButton:

                icon: 'Camera_Icon.png'
                size_hint: 1, 1
                on_press:
                    root.manager.transition.direction = 'left'
                    root.posts_button_press()

            MDIconButton:

                icon: 'MailIcon.png'
                size_hint: 1, 1
                on_press:
                    root.manager.transition.direction = 'left'
                    root.contact_button_press()



<LogInScreen>:

    Image:

        source: "Starlight/LoginScreen.png"
        size: root.size
        keep_ratio: False
        allow_stretch: True

    BoxLayout:
        orientation: 'vertical'
        canvas:

            Color:
                rgba: 255/255, 185/255, 245/255, 0.8

            RoundedRectangle:
                pos: self.width/2 - root.width*7/16, self.height*2/3 - root.height/4
                size: self.width*7/8, self.height*1/3
                radius: [(self.height/20, self.height/20), (self.height/20, self.height/20), (self.height/20, self.height/20), (self.height/20, self.height/20)]
        Label:
            id: app_name
            size_hint: 0.7, None
            height: root.height / 6
            text: 'Star Light'
            font_name: 'Fonts/Chekhard.ttf'
            font_size: self.width/6
            color: 0.1, 0.1, 0.1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.25}

        BoxLayout:
            id: LogInLayout
            orientation: 'vertical'
            size_hint: 3/4, 1
            pos_hint: {"center_x": 0.5, "top": 0}
            Label:
                id: LoginLabel
                text: ''
                font_size: self.height / 2
                font_name: 'Fonts/Chekhard.ttf'
                color: 0.1, 0.1, 0.1, 1
                size_hint: 1, None
                height: root.height / 12
                halign: 'center'
                valign: 'top'
                padding_y: self.height / 4
            Label:
                id: username
                text: 'username:'
                height: root.height / 20
                text_size: self.size
                font_size: root.height / 45
                color: 0.1, 0.1, 0.1, 1
                padding_x: self.width / 20
                padding_y: self.width / 100
                size_hint: 1, None

            TextInput:
                id: UsernameInput
                multiline: False
                background_color: [255/255, 185/255, 245/255, 0.5]
                size_hint: 1, None
                height: root.height / 25
                cursor_color: 0.1, 0.1, 0.1, 1
                text_size: self.size
                font_size: self.height * 0.9 / 2
                foreground_color: 0.1, 0.1, 0.1

            Label:
                id: password
                text: 'password:'
                height: root.height / 12
                text_size: self.size
                font_size: root.height / 45
                color: .1, .1, .1, 1
                halign: 'left'
                padding_x: self.width / 20
                padding_y: self.width / 100
                size_hint: 1, None

            TextInput:
                id: PasswordInput
                multiline: False
                background_color: [255/255, 185/255, 245/255, 0.8]
                size_hint: 1, None
                text_size: self.size
                font_size: self.height * 0.9 / 2
                foreground_color: .1, .1, .1
                height: root.height / 25
                cursor_color: .1, .1, .1, 1

            Label:
                size_hint: 1, 0
                height: root.height / 25

            MDRectangleFlatButton:
                text: "Log in"
                theme_text_color: "Custom"
                text_color: "black"
                line_color: .1, .1, .1, 1
                size_hint: 0.6, None
                height: root.height / 20
                pos_hint: {"center_x" : 0.5, "center_y" : 0.5}
                on_press:
                    root.manager.transition.direction = 'left'
                    root.check_login()
        Label:
            text: ''
            size_hint: 1, None
            height: root.height * 9/20

